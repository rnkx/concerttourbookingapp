<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#035254">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header and Button Section (Fixed at top) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/white"
            android:elevation="4dp">

            <!-- Header Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Manage Concerts"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Updated: Back to Dashboard/Home button -->
            <Button
                android:id="@+id/btnBackToHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back to Home"
                android:backgroundTint="@color/primary"
                android:textColor="@color/white"
                android:layout_marginTop="16dp" />
            <!-- Cancel All Button -->
            <Button
                android:id="@+id/btnCancelConcert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancel All Concerts"
                android:backgroundTint="@color/red"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="12dp" />

        </LinearLayout>

        <!-- Concerts List (Takes remaining space) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewConcerts"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:padding="16dp"
            android:paddingTop="8dp" />

    </LinearLayout>

    <!-- Add Concert FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddConcert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        app:srcCompat="@android:drawable/ic_input_add"
        app:backgroundTint="@color/teal_700"
        android:contentDescription="Add Concert" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>